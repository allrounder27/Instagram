<div class="card card_a" style="width:700px">

  <div class="card-body border-bottom">
    <div class="d-flex">
      <div class="p-2">
        <img src="/assets/images/thumbnail.png" height="40px" width="40px">
      </div>
    </div>
  </div>

  <img class="card-img-top border-bottom" src="assets/upload/{{post.name}}" alt="Card image">

  <div class="card-body border-bottom">
    <span class="card-text"><b>{{post.username}} </b>{{post.caption}}</span>
    <p class="card-text">{{post.time}}</p>
  </div>

  <div class="card-body d-flex margin border-bottom">
    <div class="p-2 align-self-center">
      <span class="card-text">Liked by {{post.likes}} users</span>
    </div>
  </div>

  <div class="card-body border-bottom">
    <h6>Comments:</h6>
    {% for comment in comments %}
    {% if (comment.imageid==post.id) %}
    <p>
      <b>{{comment.username}}</b> {{comment.comment}}
    </p>
    {% endif %}
    {% endfor %}
  </div>

  <div class="card-body">
    <form method='post' action='/comment'>
      <input type="hidden" value="{{post.id}}" name="imageid">
      <input type="text" name="comment" class="input_field" placeholder="Add a comment...">
      <button type='submit' class="btn"><i class="far fa-comment-alt fa-2x"></i></button>
    </form>
  </div>

</div>
<br><br><br>
