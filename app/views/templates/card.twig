<div class="card card_a" style="width:700px">
  <div class="card-body border-bottom">
    <h4 class="card-title">{{post.username}}</h4>
  </div>
  <img class="card-img-top border-bottom" src="assets/upload/{{post.name}}" alt="Card image">
  <div class="card-body">
    <p class="card-text">{{post.caption}}</p>
    <form method='post' action='/like'>
      <input type="hidden" value="{{post.id}}" name="imageid">
      <button type='submit' class="btn btn-primary">Like</button>
    </form>
    <p class="card-text">Liked by {{post.likes}} users</p>
    {% for comment in comments %}
    {% if (comment.imageid==post.id) %}
    <p>
      <b>{{comment.username}}</b> {{comment.comment}}
    </p>
    {% endif %}
    {% endfor %}
    <form method='post' action='/comment'>
      <input type="hidden" value="{{post.id}}" name="imageid">
      <input type="text" name="comment"><br><br>
      <button type='submit' class="btn btn-primary">Comment</button>
    </form>
  </div>
</div><br><br><br>
