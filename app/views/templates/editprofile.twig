{% include("templates/header.twig") %}

{% include("templates/navbar.twig") %}

<div style="width:800px; margin:0 auto;">

  <div class="d-flex justify-content-center">

    <div class="p-2">
      <img src="/assets/images/profilepic.png" height="100%" width="100%">
    </div>

    <div class="p-2">

      <div class="d-flex flex-column">

        <div class="p-2">
          <p class="login_title">
            Change Profile Picture:
          </p>
        </div>

        <div class="p-2">
          <form method='post' action='/pic' enctype='multipart/form-data'>
            <div class="form-group">
              <label for="file">Choose Profile Photo:</label>
              <input type='file' class="form-control" name="image" placeholder="Choose Photo:">
            </div>
            <button type='submit' class="btn btn-primary btn-block">Change Pic</button>
          </form>
        </div>
        
        <div class="p-2">
          <form method='post' action='/handle'>
            <div class="form-group">
              <label for="username">Enter new username:</label>
              <input type='text' class="form-control" name="username" placeholder="Enter new username">
            </div>
            <button type='submit' class="btn btn-primary btn-block">Change Username</button>
          </form>
        </div>

      </div>

    </div>

  </div>

</div>
{% include("templates/footer.twig") %}
